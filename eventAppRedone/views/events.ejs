<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events - The Divine Crustacean</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/index.css">
</head>
<body>
    <div class="wrapper">
        <%- include('partials/header') %>
        <main class="content container-fluid p-0">
            <div class="container">
                <h2 class="text-center py-3">Events</h2>
                <% for (let category in categorizedEvents) { %>
                    <h3 class="mt-4"><%= category %></h3>
                    <div class="row">
                        <% categorizedEvents[category].forEach(event => { %>
                            <div class="col-md-4">
                                <div class="card mb-4">
                                    <img src="<%= event.image %>" class="card-img-top event-image" alt="<%= event.title %>">
                                    <div class="card-body">
                                        <h5 class="card-title text-truncate"><%= event.title %></h5>
                                        <p class="card-text text-truncate"><%= event.details %></p>
                                        <a href="/events/<%= event._id %>" class="btn btn-primary">View Details</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        </main>
        <%- include('partials/footer') %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/scripts.js"></script>
</body>
</html>
